{
  "version": "1.0.2",
  "id": "@shopgate/change-header-colors",
  "components": [
    {
      "id": "Style fixes",
      "path": "frontend/globalCss/style.js",
      "type": "portals",
      "target": "app.globals"
    },
    {
      "id": "HomeAppBar",
      "path": "frontend/components/HomeAppBar",
      "type": "portals",
      "target": "app-bar.default"
    }
  ],
  "configuration": {
    "headerHomePageBackgroundColor": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "text",
        "label": "Color of Header Background on Startpage"
      }
    },
    "headerHomePageTextColor": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "text",
        "label": "Textcolor (Icons) of Header on Startpage"
      }
    }
  }
}
