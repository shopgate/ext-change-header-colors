{
  "version": "3.0.0-alpha.1",
  "id": "@shopgate/change-header-colors",
  "components": [
    {
      "id": "Style fixes",
      "path": "frontend/globalCss/style.js",
      "type": "portals",
      "target": "app.globals"
    },
    {
      "id": "HomeAppBar",
      "path": "frontend/components/AppBar",
      "type": "portals",
      "target": "app-bar.default"
    }
  ],
  "configuration": {
    "backgroundColor": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "text",
        "label": "Color of Header Background"
      }
    },
    "textColor": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "text",
        "label": "Textcolor (Icons) of Header"
      }
    },
    "affectedPages": {
      "type": "admin",
      "destination": "frontend",
      "default": [],
      "params": {
        "type": "json",
        "label": "Whitelist where the header should change eg [\"/\", \"/item\"]. Default [] will change it on every page"
      }
    }
  }
}
